<!DOCTYPE html>
<html>
  <head>
    <title>AdvancedLandingPages</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'nav', media: 'all', 'data-turbolinks-track': 'reload' %>


    <% if current_page?(root_path) %>
    <%= stylesheet_link_tag    'root', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% elsif current_page?(land1_path) %>
    <%= stylesheet_link_tag    'landing1', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% elsif current_page?(land2_path) %>
    <%= stylesheet_link_tag    'landing2', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% elsif current_page?(land2_path) %>
    <%= stylesheet_link_tag    'landing3', media: 'all', 'data-turbolinks-track': 'reload' %>

    <% end %>


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">

  </head>

  <body>

    <%= render 'layouts/header' %>
    <% if flash[:notice] %>
      <%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <%= flash[:error] %></p>
    <% end %>
    <% flash[:error] = flash[:notice] = nil %>
    <%= yield %>
    <%= render 'layouts/footer' %>

  </body>
</html>
